#include <utility>

using line_segment = size_t;

//+------------------------------------------------------------------+
//| gcm0                                                             |
//+------------------------------------------------------------------+

line_segment gcm0(line_segment a, line_segment b)
{
    while(a != b)
    {
        if(b < a)
        {
            a = a - b;
        }
        else
        {
            b = b - a;
        }
    }

    return a;
}

//+------------------------------------------------------------------+
//| gcm1                                                             |
//+------------------------------------------------------------------+

line_segment gcm1(line_segment a, line_segment b)
{
    while(a != b)
    {
        while(b < a)
        {
            a = a - b;
        }

        std::swap(a, b);
    }

    return a;
}
